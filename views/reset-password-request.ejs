<!-- reset-password-request.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demande de réinitialisation du mot de passe</title>
</head>
<body>
  <h1>Demande de réinitialisation du mot de passe</h1>

  <% if (error) { %>
    <p class="error-message"><%= error %></p>
  <% } %>

  <% if (success) { %>
    <p class="success-message"><%= success %></p>
  <% } %>

  <% if (!error && !success) { %>
    <form action="/reset-password-request" method="POST">
      <label for="email">Adresse e-mail:</label>
      <input type="email" id="email" name="email" required>
      <button type="submit">Envoyer la demande de réinitialisation</button>
    </form>
  <% } %>
</body>
</html>
