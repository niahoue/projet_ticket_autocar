<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> connexion </h1>

        <%- include('./partiels/messages') %>

        <form action="/users/login" method="POST">
          <div class="form-group mb-3">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Entrer Email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Entrer mot de Pass"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4 text-center">Se connecter</button>
        </form>
        <p class="lead mt-4">
          Pas de Compte ? <a href="/users/register">S'incrire</a> - compte Compangnie ? <a href="/company/login">Par ici</a>
        </p>
      </div>
    </div>
  </div>