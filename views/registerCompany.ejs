<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-briefcase"></i> S'inscrire compagnie
      </h1>
      <% include('./partiels/messages') %>
      <form action="/company/register" method="POST">
        <div class="form-group mb-3">
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Entrer le nom de votre compagnie"
            value="<%= typeof name !== 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group mb-3">
          <input
            type="text"
            id="siege"
            name="siege"
            class="form-control"
            placeholder="Entrer le lieu de votre siège"
            value="<%= typeof siege !== 'undefined' ? siege : '' %>"
          />
        </div>
        <div class="form-group mb-3">
          <input
            type="tel"
            id="phone"
            name="phone"
            class="form-control"
            placeholder="Entrer le numéro de téléphone"
            value="<%= typeof phone !== 'undefined' ? phone : '' %>"
          />
        </div>
        <div class="form-group mb-3">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Entrer l'email"
            value="<%= typeof email !== 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group mb-3">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Mot de passe"
            value="<%= typeof password !== 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirmer le mot de passe"
            value="<%= typeof password2 !== 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-4">
          S'inscrire
        </button>
      </form>
      <p class="lead mt-4">Avez-vous déjà un compte compagnie? <a href="/company/login">Connectez-vous</a></p>
    </div>
  </div>
</div>
